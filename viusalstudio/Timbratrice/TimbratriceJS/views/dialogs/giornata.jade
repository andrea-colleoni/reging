#dialogGiornata(class=['modal', 'fade'],role="dialog",title="Giornata",style='display: none;')
		#infoGiornata(class=['modal-dialog', 'modal-lg'])
			.modal-content
				div(class=['modal-header', 'alert-info'])
					button.close(type="button",data-dismiss="modal") &times;
					h4#dataGiornata.modal-title
					span Dati della giornata	
				.modal-body
					form.form-horizontal(role='form')
						.row
							strong.col-md-3 Status giornata
							#statusGiornata.col-md-9
						.row
							strong.col-md-3 Ore lavorate
							#oreLavorate.col-md-9 
						.row
							strong.col-md-3 Dipendente
							#nominativoDipendente.col-md-9
						#fuoriAPranzo.row
							div(class=['col-md-12', 'alert', 'alert-info']) <span class="glyphicon glyphicon-cutlery"></span> Il dipendente attualmente &egrave; fuori a pranzo
						#fuoriOrario.row
							div(class=['col-md-12', 'alert', 'alert-warning']) <span class="glyphicon glyphicon-time"></span> Sono presenti timbrate fuori orario
						#modificheManuali.row
							div(class=['col-md-12', 'alert', 'alert-warning']) <span class="glyphicon glyphicon-edit"></span> Sono presenti modifiche manuali							
						#coppieTimbrate
							table#tabCoppieTimbrate(class=['table', 'table-striped', 'table-hover', 'table-condensed'],style='width:100%')
						.form-group
							div(class="col-md-offset-3", "col-md-4")
								.btn-group.pull-right
									button#btnCloseDialogGiornata(class=["btn", "btn-default", "btn-lg"]) Chiudi